{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.vue",
    "**/*.ts"
  ],
  "exclude": [
    "tests",
    "vitest.config"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noEmit": true
  },
  "vueCompilerOptions": {
    "target": 3.5
  }
}
